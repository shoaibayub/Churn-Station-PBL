@{
    ViewData["Title"] = "Home Page";
    ViewData["ActivePage"] = "Home";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/media/1.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/media/2.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/media/3.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 d-flex align-items-center">
            <div class="w-100">
                <div class="mb-3">
                    <h2>
                        <span class="text-success fst-italic fw-bold">Churn Station.</span>
                        Where Every Scoop Tells a Story of Sweet Bliss
                    </h2>
                </div>
                <div class="mb-1 p-3">
                    <span><i class="fa-solid fa-champagne-glasses text-success mx-2 fs-4"></i></span>
                    <span class="fs-5 text-dark fst-italic">Delicious Flavours</span>
                </div>
                <div class="mb-1 p-3">
                    <span><i class="fa-solid fa-ice-cream text-success mx-2 fs-4"></i></span>
                    <span class="fs-5 text-dark fst-italic">Fresh flavours</span>
                </div>
                <div class="mb-1 p-3">
                    <span><i class="fa-solid fa-cookie-bite text-success mx-2 fs-4"></i></span>
                    <span class="fs-5 text-dark fst-italic">Cookie bites</span>
                    <br><br>
                    <p class="py-2">Enjoy your favorite ice cream delivered to your door within 30 minutes.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4 box-shadow">
    <div class="row">
        <h2>Our Delicious Flavours</h2>
        <div class="col-md-4">
            <div class="card mb-3 shadow">
                <div class="card-body">
                    <img src="/media/1.jpg" class="d-block w-100" height="200" alt="...">
                    <h5 class="card-title">Chocolate</h5>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3 shadow">
                <div class="card-body">
                    <img src="/media/2.jpg" class="d-block w-100" height="200" alt="...">
                    <h5 class="card-title">Mango Vanilla</h5>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3 shadow">
                <div class="card-body">
                    <img src="/media/3.jpg" class="d-block w-100" height="200" alt="...">
                    <h5 class="card-title">Cones</h5>
                </div>
            </div>
        </div>
    </div>
</div>






